#!/bin/sh
#
# Resize images to apply for Retina.

format="png" # type of image(s)

for img in *."$format"; do echo "\nResizing $img to apply for Retina..."; convert "$img" -resize 200% 2x-"$img"; done

if [ $? -eq 0 ]; then
	echo "\n\033[1;32mDone!\033[0m\n"
else
	echo "\n\033[1;31mError!\033[0m\n"
fi

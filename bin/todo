#!/bin/bash
#
# Simple todo app.
#
# Usage:
#
#   $ todo
#   $ todo add TASK
#   $ todo edit TASK NEWTASK
#   $ todo rm TASK
#   $ todo clean
#

todo=~/dev/txt/todo # without trailing slash

case "$1" in
  add)
    touch $todo/$2
    ;;
  edit)
    if [ -f $todo/$2 ] && [ ! -f $todo/$3 ]
    then
      mv $todo/$2 $todo/$3
    elif [ ! -f $todo/$2 ]
    then
      printf "$(colorize "There is no such task." red)\n"
    elif [ -f $todo/$3 ]
    then
      printf "$(colorize "There is already such task." red)\n"
    fi
    ;;
  rm)
    rm -f $todo/$2
    ;;
  clean)
    rm -f $todo/*
    ;;
  *)
    ls -1 $todo
esac

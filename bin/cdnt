#!/bin/bash
#
# Count code lines.

# Files and directories to ignore
ignores=(
  .git
  .ruby-version
  .sass-cache
  _site
  _gh_pages
  bower_components
  node_modules
)

for item in ${ignores[*]}
do
  ignore+=" -o -name $item -prune"
done

find . -type f -print $ignore | xargs wc -l | awk "END {print \$1}"

#!/bin/bash
#
# Simple notes app.
#
# Usage:
#
#   $ note
#   $ note add NOTE
#   $ note edit NOTE
#   $ note rm NOTE
#   $ note clean
#

note=~/dev/txt/note # without trailing slash

case "$1" in
  add)
    touch $note/$2
    ;;
  edit)
    if [ -f $note/$2 ] && [ ! -f $note/$3 ]
    then
      mv $note/$2 $note/$3
    elif [ ! -f $note/$2 ]
    then
      printf "\033[31mThere is no such note.\033[0m\n"
    elif [ -f $note/$3 ]
    then
      printf "\033[31mThere is already such note.\033[0m\n"
    fi
    ;;
  rm)
    rm -f $note/$2
    ;;
  clean)
    rm -f $note/*
    ;;
  *)
    ls -1 $note
esac

#!/bin/bash
#
# Count installed packages.

apt=0
npm=0

if [ $(which apt-get) ]
then
  apt=$(dpkg -l | grep ^ii | wc -l)
fi

if [ $(which npm) ]
then
  npm=$(($(npm ls -g | wc -l) - 2))
fi

total=$(($apt + $npm))

printf "\n  \033[1mapt:\033[0m   $apt\n"
printf   "  \033[1mnpm:\033[0m   $npm\n"
printf "\n  \033[1mtotal:\033[0m $total\n\n"

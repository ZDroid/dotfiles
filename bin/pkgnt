#!/bin/sh
#
# Count installed packages.

apt=`dpkg -l | grep ^ii | wc -l`
npm=$((`npm ls -g | wc -l` - 2))

if which apt-get > /dev/null
then
  echo "\n  \033[1mapt:\033[0m   $apt"
fi

if which npm > /dev/null
then
  echo "  \033[1mnpm:\033[0m   $npm\n"
fi

if which apt-get > /dev/null && which npm > /dev/null
then
  echo "  \033[1mtotal:\033[0m $(($apt + $npm))\n"
fi
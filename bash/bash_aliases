#!/bin/bash

#
# Bash aliases
#

# Colors
if [ "$color_support" = true ]
then
  alias ls="ls --color=auto"
  alias grep="grep --color=auto"
fi

# Git
if [ $(which git) ] && [ $(which hub) ]
then
  alias git=hub
fi

# Utilities
alias uncrlf="sed -i 's/\r$//'"

if [ $(which xclip) ]
then
  alias xcopy="xclip -sel clip"
  alias xpaste="xclip -sel clip -o"
fi

# Make VSCode icon agree with the icon theme
alias vscodeicon="sudo sed -i 's/\/usr\/share\/pixmaps\/com.visualstudio.code.png/vscode/g' /usr/share/applications/code.desktop"

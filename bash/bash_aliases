#!/bin/bash

#
# Bash aliases
#

# General
if [ $(which git) ] && [ $(which hub) ]
then
  alias git=hub
fi

if [ $(which rethinkdb) ]
then
  alias rdb="rethinkdb -d .rdb"
fi

# Colors
if [ "$color_support" = true ]
then
  alias ls="ls --color=auto"
  alias grep="grep --color=auto"
fi

# Utilities
alias uncrlf="sed -i 's/\r$//'"

if [ $(which xclip) ]
then
  alias pbcopy="xclip -sel clip"
  alias pbpaste="xclip -sel clip -o"
fi

#!/bin/bash

#
# Bash aliases
#

# General
if [ $(which git) ] && [ $(which hub) ]
then
  alias git=hub
fi

if [ $(which rethinkdb) ]
then
  alias rdb="rethinkdb -d .rdb"
fi

# Just with colors
if [ "$colors_support" = true ]
then
  alias ls="ls --color=auto"
  alias grep="grep --color=auto"
fi

# Utilities
alias uncrlf="sed -i 's/\r$//'"

if [ $(which xclip) ]
then
  alias pbcopy="xclip -sel clip"
  alias pbpaste="xclip -sel clip -o"
fi

# Local
if [ -f ~/dev/git/feedstyl/feedstyl.py ]
then
  alias feedstyl=~/dev/git/feedstyl/feedstyl.py
fi
